<Window x:Class="HwidChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HwidChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#12121E">
    <Grid>
        <Button Name="btnGetHWID" Content="Get HWID" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="30" Click="btnGetHWID_Click" Background="Cyan"/>
        <TextBox Name="txtHWID" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Height="30" Width="300" IsReadOnly="True" Background="Cyan"/>
    </Grid>
</Window>
